{% extends 'layOut.njk' %}

{% block content %}

    <div class="card">
        <section class="image" style="background: url({{instructor.avatarurl}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>
                    Instrutor</div>
                <div>{{instructor.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{instructor.age}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{'Masculino' if instructor.gender == 'M' else 'Feminino'}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    <ul>
                        {% for services in instructor.services %}
                            <li>
                                <span>{{services}}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{instructor.created_at}}</div>
            </div>

            <a href="/Instructors/{{instructor.id}}/edit" class="button">Edição</a>

        </section>
    </div>

{% endblock content %}