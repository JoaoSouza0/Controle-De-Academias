{% extends 'layOut.njk' %}

{% block content %}

    <div class="card table">
            
        <table width="100%">
            <a href="/instructors/create">Novo</a>
            <thead>
                <tr>
                    <th>

                        Instrutor
                    </th>
                    <th>

                        Serviços
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>

            </thead>
            <tbody>

                {% for instrutor in instructors %}
                    <tr>
                        
                        <td>
                            <span style="background-image: url({{instrutor.avatarurl}})"></span>
                            {{instrutor.name}}
                        </td>

                        <td>
                             {{instrutor.services}}
                        </td>
                        <td>
                                <a href="/Instructors/{{instrutor.id}}">Ver</a>
                        </td>
                    </tr>
                    {%endfor%}

                </tbody>
            </table>
        </div>

    {% endblock content %}